<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin_horizontal"
    tools:cardBackgroundColor="@color/blue_850"
    app:cardElevation="1dp"
    app:cardCornerRadius="24dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/item_forecast_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="middle"
            android:ems="7"
            android:fontFamily="@font/mazzardm_regular"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Agora" />

        <ImageView
            android:id="@+id/item_forecast_icon"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            tools:src="@drawable/ic_location_blue" />

        <TextView
            android:id="@+id/item_forecast_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/hirukopro_bold"
            android:text="18Â°"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#f2f2f2"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


