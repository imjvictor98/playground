<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/item_forecast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@drawable/ic_location_blue"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/item_forecast_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        tools:textColor="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/mazzardm_medium"
        tools:text="Chuvas fortes"
        android:ems="7"
        android:maxLines="1"
        android:ellipsize="middle"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/item_forecast_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="#f2f2f2"
        android:fontFamily="@font/hirukopro_regular"
        android:text="08:00"
        android:textSize="14sp"/>

</LinearLayout>
