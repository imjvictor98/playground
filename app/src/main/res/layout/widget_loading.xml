<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_100">

    <ImageView
        android:id="@+id/widget_loading_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/weather_loading_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/widget_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mazzardm_regular"
        android:padding="24dp"
        android:textAlignment="center"
        android:textColor="@color/white_300"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widget_loading_image"
        tools:text="Evitando trovoadas na sua regiÃ£o e medindo o coeficiente linear." />

</androidx.constraintlayout.widget.ConstraintLayout>