<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Custom.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="android:fontFamily">@font/mazzardm_medium</item>
    </style>

    <style name="ButtonPurple500" parent="Custom.MaterialButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_500</item>
    </style>

    <style name="ButtonBlue800" parent="Custom.MaterialButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_800</item>
    </style>

    <style name="ButtonSalmon" parent="Custom.MaterialButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/salmon</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TabLayoutAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/black_100</item>
        <item name="tabIndicator">@drawable/tab_item_selector</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorColor">@color/salmon</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">@color/tab_item_selector</item>
        <item name="tabGravity">start</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/mazzardm_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_24_white</item>
        <item name="android:background">@drawable/shape_search_view</item>
        <item name="android:queryBackground">@null</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="fontFamily">@font/mazzardm_regular</item>
        <item name="android:fontFamily">@font/mazzardm_regular</item>
    </style>
</resources>